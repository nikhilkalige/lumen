    <!-- Query patterns for adding gas entry custom intent -->
    <string-array name="addGasEntryQueries">
        <!-- Odometer First -->
        <item>gas entry $odometer miles $gallons gallons for $cost dollars</item>
        <item>gas entry $odometer miles $gallons gallons and $cost dollars</item>
        <item>gas entry $odometer miles and $gallons gallons and $cost dollars</item>
        <item>gas entry $odometer miles $gallons gallons $cost dollars</item>
        <item>gas entry $odometer miles $gallons gallons $cost bucks</item>
        <item>gas entry $odometer miles $gallons gallons $cost bugs</item>

        <!-- Gallons First -->
        <item>gas entry $gallons gallons $odometer miles for $cost dollars</item>

        <!-- Cost First -->
        <item>gas entry for $cost dollars $gallons gallons at $odometer miles</item>
    </string-array>
